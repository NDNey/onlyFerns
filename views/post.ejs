<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Post Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/8ea013bdc7.js" crossorigin="anonymous"></script>

</head>
<body>

  <% for(var i=0; i<messages.length; i++) {%>
    <div class="message">
      <a href="/page/<%=messages[i].posterId%>"> <span><%= messages[i].name %></span> </a>
      <img src="/images/uploads/<%= messages[i].img %>" alt="">
      <span><%= messages[i].msg %></span>
      <span><%= messages[i].thumbUp %></span>
      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
    </div>
  <% } %>
  

  <div>
    <form action="/comment" method="POST" >
      <input type="text" name="postId" value="<%=messages[0]._id%>" placeholder="<%=messages[0]._id%>" hidden>
      <input type="text" name="comment" placeholder="Comment">
      <button type="submit">Comment</button>
    </form>
  </div>


  <% for(var i=0; i<comments.length; i++) {%>
    <div class="message">
       <p><strong><%= comments[i].postedBy %></strong> <%= comments[i].comment %></p>
    </div>
  <% } %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>